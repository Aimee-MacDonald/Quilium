doctype html
html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  link(rel="stylesheet", href="styles/read.css")
  title Quilium
body
  #container
    h1 Read Your Diary!
    each entry in entries
      #entry
        #heading
          h1 #{entry.title}
          h1 #{entry.date}
        p #{entry.content}
